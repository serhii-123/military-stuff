<section class="main__products-list products-list">
    {{#each products}}
    <section class="products-list__product-card product-card">
        <p class="product-card__name">{{this.name}}</p>
        <img src="../img/products/{{this.category}}/{{this.image_name}}" alt="" class="product-card__img">
        <p class="product-card__price">{{this.price}}</p>
        <button class="product-card__link">Більше про товар</button>
    </section>
    {{/each}}
</section>